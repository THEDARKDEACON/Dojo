# Hardware component status message

std_msgs/Header header

# Component identifiers
string component_name
string hardware_id

# Status information
uint8 UNKNOWN = 0
uint8 INITIALIZING = 1
uint8 READY = 2
uint8 ERROR = 3
uint8 DISCONNECTED = 4

uint8 status
string status_message
float64 uptime
float64 last_update

# Component-specific data
string[] data_keys
string[] data_values